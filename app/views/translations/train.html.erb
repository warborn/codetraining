<section class="row practice-exercise"><!-- practice exercise-->
	<div class="col-sm-12 col-md-12 col-lg-12">
		<h5><%= @translation.challenge.name %></h5>
	</div>
	<div class="details col-sm-12 col-md-12 col-lg-5">
		<ul class="nav nav-tabs" id="details-tab">
			<li class="nav-item"><a href="#description" class="nav-link active">Descripción</a></li>
			<li class="nav-item"><a href="#output" class="nav-link">Salida</a></li>
		</ul>

		<div class="tab-content">
		  <div class="tab-pane scroll active markdown-preview" id="description" role="tabpanel">
		  	<div class="body">
		  		<div class="content">
		  			<input type="hidden" value="<%= @translation.challenge.description %>">
			  	</div>
			  	<hr />
			  	<div class="challenge-tags col-sm-12 col-md-12 col-lg-12">
					  <span class="icon"><i class="fa fa-tags" aria-hidden="true"></i></span>
						<%= render partial: 'shared/tags', collection: @translation.challenge.splitted_tags, as: :tag %>
			    </div>
		  	</div>
		  </div>
		  <div class="tab-pane scroll code-output" id="output" role="tabpanel">
		  	<%= render partial: 'shared/code_output' %>
		  </div>
		</div>
	</div>
	<div class="col-sm-12 col-md-12 col-lg-7">
		<div class="card">
			<div class="card-header">
				Solución
			</div>
			<card class="card-block">
				<textarea class="form-control exercise-solution" id="code-area"><%= @translation.initial_solution %></textarea>
			</card>
		</div>

		<div class="card mt-3">
			<div class="card-header">
				Pruebas
			</div>
			<card class="card-block">
				<textarea class="form-control exercise-tests" id="test-area"><%= @translation.example_fixture %></textarea>
			</card>
		</div>
		
		<div class="row train-options mt-3">
			<div class="btn-group col-sm-12 col-lg-6" role="group">
				<button type="button" class="btn btn-outline-secondary">Desbloquear Solución</button>
				<button id="reset-btn" type="button" class="btn btn-outline-secondary">Reiniciar</button>
			</div>
			<div class="btn-group col-sm-12 col-lg-6" role="group">
				<button id="example-btn"type="button" class="btn btn-outline-primary">Probar Código</button>
				<button id="attempt-btn"type="button" class="btn btn-outline-success">Enviar Solución</button>
			</div>
		</div>
	</div>
</section><!-- end practice exercise -->

<% content_for :javascript do %>
  <script type="text/javascript">
     <%= render file: js_path(:translations, :train) %>
  </script>
<% end %>