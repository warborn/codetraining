<section><!-- exercise details -->
	<div class="mb-4 col-sm-12">
		<div class="challenge-details row">
			<div class="info col-sm-12 col-md-6 col-lg-7">
				<h5 class="name"><%= @challenge.name %></h5>
				<span class="icon">
					<%= link_to "/users/#{@challenge.user.username}" do %>
					<i class="fa fa-user" aria-hidden="true"></i><%= @challenge.user.username %></a>
					<% end %>
				</span>
				<span class="icon"><i class="fa fa-code" aria-hidden="true"></i><%= @challenge.translations.first.language.name %></span>
				<span class="icon"><i class="fa fa-signal" aria-hidden="true"></i>Nivel <%= @challenge.rank %></span>
				<span class="icon"><i class="fa fa-user-plus" aria-hidden="true"></i></i><%= @solutions_count %> veces contestado</span>
			</div>
			<div class="actions col-sm-12 col-md-6 col-lg-5 d-flex justify-content-between align-items-center">
				<%= link_to 'Practicar', train_challenge_path(@challenge, 'javascript'), class: 'base-button -green' %>
				<%= link_to 'Ver Soluciones', solutions_challenge_path(@challenge, 'javascript'), class: 'base-button -blue' %>
			</div>
		</div>
	</div>
	
	<div class="col-sm-12">
		<div class="exercise-description row">
			<div class="markdown-preview regular col-sm-12 col-md-12 col-lg-12">
				<div class="body">
					<div class="content marked-code">
		  			<input type="hidden" value="<%= @challenge.description %>">
			  		<hr />
			  	</div>
			  	<div class="challenge-tags col-sm-12 col-md-12 col-lg-12">
					  <span class="icon"><i class="fa fa-tags" aria-hidden="true"></i></span>
						<%= render partial: 'shared/tags', collection: @challenge.splitted_tags, as: :tag %>
			    </div>
				</div>
			</div>
		</div>
	</div>
</section><!-- end exercise details -->

<%= javascript_pack_tag 'challenges/show' %>